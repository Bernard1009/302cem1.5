{{#if removedProduct}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  The Selected Product has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h1>Products</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addproduct" type="button" class="btn btn-primary align-self-center">+ add product</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">ProductID</th>
      <th scope="col">Name</th>
      <th scope="col">Source</th>
      <th scope="col">Quantity</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.productid}}</td>
      <td>{{this.name}}</td>
      <td>{{this.source}}</td>
      <td>{{this.quantity}}</td>
      <td class="text-end">
        <a href="/viewproduct/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/editproduct/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>